.page-content {
  padding: 8px 16px;
}

.page-footer {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.w-100 {
  width: 100%;
}

.px-16 {
  padding: 0 16px;
}

.mt-16 {
  margin-top: 16px;
}

.mb-16 {
  margin-bottom: 16px;
}

.grid-2 {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
}

.grid-3 {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 16px;
}

.grid-1 {
  display: grid;
  grid-template-columns: 1fr;
  gap: 16px;
}
