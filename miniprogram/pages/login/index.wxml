<view>
  <van-nav-bar title="登录" left-text="返回" left-arrow bind:click-left="onClickLeft" />
  <view class="page-content">
    <van-cell-group>
      <van-field label="手机号" required clearable value="{{ mobile }}" placeholder="请输入" border="{{ false }}" bind:change="bindMobileChange" />
      <van-field label="密码" type="password" required clearable value="{{ password }}" placeholder="请输入" border="{{ false }}" bind:change="bindPasswordChange" />
    </van-cell-group>
  </view>
  <view class="page-footer">
    <view class="w-100 px-16">
      <van-button type="primary" block bindtap="bindLogin">登录</van-button>
    </view>
  </view>
</view>